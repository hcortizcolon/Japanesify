{

  "manifest_version": 2,
  "name": "Kana",
  "version": "1.5",

  "applications": {
    "gecko": {
      "id": "kana@thorbonvik.com"
    }
  },
  "description": "Learn the kana by gradually substituting latin letters",
    "icons": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },

  "permissions": [
      "tabs",
      "cookies",
      "<all_urls>",
      "storage"
  ],

  "browser_action": {
      "browser_style": true,
      "default_icon": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png"
      },
      "default_title": "Kana",
      "default_popup": "popup/popup.html"
    },
    "background": {
    "scripts": ["background_scripts/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/kanaMap.js", "content_scripts/substitute.js", "content_scripts/update.js"]
    }
  ]
}
